{
  "name": "cypresscucumberbdd",
  "version": "1.0.0",
  "description": "cypress Cucumber BDD framework",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cy:open": "cypress open",

    "cy-chrome-headless":"cypress run --env TAGS=@Login --browser chrome",
    "cy-chrome-headed":"cypress run --env TAGS=@Login --browser chrome --headed",
    "cy-edge-headless":"cypress run --env TAGS=@Login --browser edge",
    "cy-edge-headed":"cypress run --env TAGS=@Login --browser edge --headed",
    "co-chrome-headless":"cypress run --env TAGS=@Regression --browser chrome",
    "co-chrome-headed":"cypress run --env TAGS=@Regression --browser chrome --headed",
    "co-edge-headless":"cypress run --env TAGS=@Regression --browser edge",
    "co-edge-headed":"cypress run --env TAGS=@Regression --browser edge --headed",

    "base-command": "cypress run --headed --browser chrome"
  },
  "author": "Rishi M",
  "license": "ISC",
  "devDependencies": {
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "cypress": "^12.14.0",
    "ts-loader": "^9.5.1"
  },
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^20.0.1"
  }
}
